BottomNavigationBar(
        currentIndex: selectedIndex,
        onTap: (index) {
          //there is a gesture detector on every item on items that's pass index of item then send the index to on thp function
          setState(() {
            //in background gesture detector on item pass index to on tap on tap on item
            selectedIndex = index;
          });
        },
        backgroundColor: ColorsManger.primary,//that's only worked with fixed with shifting takes item background color
        type: BottomNavigationBarType.fixed,//fixed the style of bottom nav bar(no change while select items)
        items: [
